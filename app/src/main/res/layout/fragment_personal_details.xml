<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/uploadimage"
                android:id="@+id/img_userdp"/>

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Personal Details"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <EditText
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Name"
                android:id="@+id/edt_name_pDetails"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Email"
                android:id="@+id/edt_email_pDetails"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Mobile Number"
                android:id="@+id/edt_mobile_pDetails"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Location"
                android:id="@+id/edt_location_pDetails"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Links"
                android:id="@+id/edt_links_pDetails"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Add Skills"
                android:id="@+id/edt_skills_pDetails"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>


        </LinearLayout>

        <Button
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btn_pDetails"
            android:background="#3592DB"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

</FrameLayout>